<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome.css" rel="stylesheet"/>

    <link rel="stylesheet" type="text/css" href="~/Content/slick.css" />
    <!-- Theme color -->
    <link id="switcher" href="~/Content/theme-color/default-theme.css" rel="stylesheet">  

    <!-- Main Style -->
   <link href="~/Content/style.css" rel="stylesheet">

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Kucharka", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>

            <div id="navbar" class="navbar-collapse collapse">

                    <ul id="top-menu" class="nav navbar-nav navbar-right main-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="dropdown">
                                <a href="#" data-toggle="dropdown" class="dropdown-toggle">Recepty<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>
                                        @Html.ActionLink("Kategorie", "Index", "Categories", null, new { @class = "navbar-link" })
                                    </li>
                                    <li>
                                        @Html.ActionLink("Recepty", "Index", "Recipes", null, new { @class = "navbar-link" })
                                    </li>
                                    <li>
                                        @Html.ActionLink("Ingredience", "Index", "Ingredients", null, new { @class = "navbar-link" })
                                    </li>
                                </ul>
                            </li>
                        }

                        <li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                @Html.ActionLink("Uživatelé", "Index", "Users")
                            }
                        </li>
                        <li>
                            @*If user is logged in show link for log off. If not show login link*@
                            @if (User.Identity.IsAuthenticated)
                            {
                                @Html.ActionLink("Odhlásit se", "LogOff", "Users", null, new { @class = "navbar-link" })
                            }
                            else
                            {
                                @Html.ActionLink("Login", "Login", "Users", null, new { @class = "navbar-link" })
                            }
                        </li>
                    </ul>
                </div>
            </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>